<h1>All Posts</h1>

<%= link_to 'New Post', new_post_path %>

<ul>
  <% @posts.each do |post| %>
    <li>
      <%= post.content %>
      <%= link_to 'Show', post_path(post) %>
      <%= link_to 'Edit', edit_post_path(post) %> |
      <%= button_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>